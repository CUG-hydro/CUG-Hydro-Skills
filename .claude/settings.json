{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "memory": {
        "files": [
        ]
    },
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "bash .claude/hooks/session-info.sh"
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "bash .claude/hooks/block-rm.sh"
                    },
                    {
                        "type": "command",
                        "command": "bash .claude/hooks/bash-logger.sh"
                    }
                ]
            },
            {
                "matcher": "Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "bash .claude/hooks/linux-minimalism.sh"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "bash .claude/hooks/stop-info.sh"
                    }
                ]
            }
        ]
    }
}
